@model MvcHouseofg.Models.CUENTAS

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<div class="container">

    @if (Session["autentificado"] != null)
    {
    <p>@ViewBag.mensaje</p>
    }

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <fieldset>
            <legend>CUENTAS</legend>

            <div class="editor-label">
                @Html.LabelFor(model => model.USU_ID)
            </div>
            <div class="editor-field" >
                 @Html.EditorFor(model => model.USU_ID)
                @Html.ValidationMessageFor(model => model.USU_ID)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.CUE_PASSWORD)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(model => model.CUE_PASSWORD)
                @Html.ValidationMessageFor(model => model.CUE_PASSWORD)
            </div>

            <p>
                <input type="submit" value="Login" />
            </p>
        </fieldset>
    }

    <div>
        @Html.ActionLink("Registrate aquí!", "../User/Create")
    </div>
</div>