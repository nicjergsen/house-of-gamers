@model IEnumerable<MvcHouseofg.Models.AMIGOS>

<h2>Lista de amigos</h2>

<p>
    @Html.ActionLink("Agregar amigo", "Create")
</p>
<table>
    <tr>
        <th>
            Nombre usuario
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AMI_ID)
        </td>

        <td>
            @Html.ActionLink("Eliminar amigo", "Delete", new { id=item.AMI_ID })
        </td>
        <td>
            @Html.ActionLink("Notificaciones amigo", "Notificaciones", new { amigo = item.AMI_ID })
        </td>
    </tr>
}

</table>


<div>
    @Html.ActionLink("Pagina Principal", "../Home/IndexUsuario")
</div>