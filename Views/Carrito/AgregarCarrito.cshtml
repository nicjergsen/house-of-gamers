<div class="container">
<table class="table col-lg-12">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ int total = 0; }
        @if (Session["carrito"] != null)
        {
            foreach (var item in (List<MvcHouseofg.Models.CarritoItem>) Session["carrito"])
            {
                total += (int)(item.cantidad * item.producto.PROD_PRECIO);
                <tr>
                    <td>@item.producto.PROD_ID</td>
                    <td>@item.producto.PROD_NOMBRE</td>
                    <td>@item.producto.PROD_PRECIO</td>
                    <td>@item.cantidad</td>
                    <td>@String.Format("{0:c}",(item.cantidad*item.producto.PROD_PRECIO))</td>
                    <td>@Html.ActionLink("Eliminar", "../Carrito/Delete", new { id = item.producto.PROD_ID}, null)</td>
                    
                </tr>
            }
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4">Total</td>
            <th>@String.Format("{0:c}", total)</th>
        </tr>
    </tfoot>
</table>

@Html.ActionLink("Seguir comprando", "../Home/Catalogo") | @Html.ActionLink("Comprar", "../Carrito/Comprar")

</div>